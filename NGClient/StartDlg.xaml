        <Button x:Name="btnCancel" Content="Abbrechen" HorizontalAlignment="Left" VerticalAlignment="Top" Width="125" Margin="293,73,0,0" Height="25" Click="btnCancel_Click"/>
        <Label Content="Spalten (min. 3, max. 10)" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="22,8,0,0"/>

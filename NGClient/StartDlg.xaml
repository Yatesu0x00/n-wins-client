        <Label Content="N (min. 3, max. Anz. Spalten, Reihen)" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="314,8,0,0" RenderTransformOrigin="0.629,0.577"/>

    </Grid>
</Window>

        <TextBox x:Name="tbS" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="3" VerticalAlignment="Top" Width="50" Margin="28,34,0,0" GotFocus="TextBox_GotFocus"/>
        <TextBox x:Name="tbR" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="3" VerticalAlignment="Top" Width="50" Margin="176,34,0,0" GotFocus="TextBox_GotFocus_1"/>
        <TextBox x:Name="tbN" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="3" VerticalAlignment="Top" Width="50" Margin="319,34,0,0" GotFocus="TextBox_GotFocus_2"/>
